<% include ./partials/header %>
    <div class="soulEntry"> 
        <div class="soul">
            <div class="circleAvatar">
                <img class="avatar" src=<%= rows[0].avatar %> />
            </div>
            <div class="soulText">
               <div class="soul_name">Name: <%= rows[0].soul_name %></div>
                <div class="soulScore">Rank: <%= rows[0].soul_score %></div>
                <div class="soulDescription">Description: <%= rows[0].description %></div> 
            </div>
        </div>
    </div>

    <div class="currentBid">
        <strong>Current Bid: </strong><%= '$'+ (rows[0].currBidCents/100).toFixed(2) %>
    </div>
    <div class='bidInput'><strong>Bid Now:</strong><br /> 
        <div class="bidForm">
            <form action="/listings/:id/bid?_method=PUT" method="POST">
                <label for="amount" class="">$</label>
                  <input type="text" id="amount" placeholder=
                    <% if (rows[0].currBidCents < rows[0].minBidCents ) { %>
                        <%= (parseInt(rows[0].minBidCents/100)) %>
                    <% } else { %>
                    <%= (parseInt(rows[0].currBidCents/100)) + 1 %>
                    <% } %> >.00 <button class="btn btn-primary btn-sm">Bid</button>
                </div>
            </form>  
    </div> 
    <br />
    <h4>DIAGNOSTICS SECTION: Full Listing Details:</h4>
    <ul>
    <li>listing_id: <%= rows[0].listing_id %></li>
    <li>soul_id: <%= rows[0].soul_id %></li>
    <li>seller_id: <%= rows[0].seller_id %></li>
    <li>startDatetime: <%= rows[0].startDatetime %></li>
    <li>endDatetime: <%= rows[0].endDatetime %></li>
    <li>minBidCents: <%= rows[0].minBidCents %></li>
    <li>currBidCents: <%= rows[0].currBidCents %></li>
    <li>description: <%= rows[0].description %></li>
    <li>default_img: <%= rows[0].default_img %></li>
    <li>owner_id: <%= rows[0].owner_id %></li>
    <li>soul_name: <%= rows[0].soul_name %></li>
    <li>soul_score: <%= rows[0].soul_score %></li>
    <li>avatar: <%= rows[0].avatar %></li>
    </ul>
<% include ./partials/footer %>