<% include ./partials/header %>

<div class="container">
    <h1>Edit Profile Form</h1>
    <div>
       <img src="<%= rows[0].avatar %>" class='leftImage'><br> 
    </div>
    <div class="formGroup">
        <div class="register-form">
            <form action="/manage/<%= rows[0].user_id %>?_method=PUT" method="POST">
                <input type="number" value="<%= rows[0].user_id %>" hidden>
                <label for="user_name">User Name: </label>
                <input id="user_name" type="text" name="user_name" value="<%= rows[0].user_name %>" required>

                <label for="first_name">First Name: </label>
                <input type="text" name="first_name" value="<%= rows[0].first_name %>" required>

                <label for="last_name">Last Name: </label>
                <input type="text" name="last_name" value="<%= rows[0].last_name %>" required>

                <label for="password">Password: </label>
                <input type="password" name="password" value="<%= rows[0].password%>" required>

                <label for="avatar">Avatar: </label>
                <input type="text" name="avatar" value="<%= rows[0].avatar %>">

                <div id="formButtons">
                    <button id="submitButton" class="btn btn-large btn-primary">Submit</button>
                    <a id="cancelButton" href="back" class="btn btn-large btn-primary" >Back</a>
                </div>
            </form>
        </div>


    </div>


</div>
        
<% include ./partials/footer %>