<% include ./partials/header %>
<h3>Edit Listing</h3>
<br>
<div class="container">
       <div class="soulListing">
              <div class="imgThumb">
                     <img src=<%= data[0].avatar %> class="listImage" />
                     <br>
              </div>
              <div class="formGroup">
                     <br>
                     <form action="/index/<%= data[0].soul_id %>?_method=PUT" method="POST">
                            <label for="soul_name">Soul Name:</label>
                            <input type="text" id="soul_name" name="soul_name" value="<%= data[0].soul_name %> " readonly>
                            <br>
                            
                            <label for="owner_name">Owner Name:</label>
                            <input type="text" id="owner_name" name="owner_name" value="<%= data[0].first_name %> <%= data[0].last_name %>" readonly>
                            <br>
                     
                            <label for="auction_start">Start Date (required)</label>
                            <input type="date" id="start_date" name="start_date" value="<%= data[0].start_date %>" required>
                     
                            <label for="appt">Start Time (required)</label>
                            <input type="time" id="start_time" name="start_time" value="<%= data[0].start_time %>" required>
                            <br />
                            <label for="auction_start">End Date (required)</label>
                            <input type="date" id="end_date"
                                   name="end_date" value="<%= data[0].end_date %>" required>
                     
                            <label for="appt">End Time (required)</label>
                            <input type="time" id="end_time" name="end_time" value="<%= data[0].end_time %>" required>
                            <br>

                            <label for="min_bid">Min. Bid (required)</label>
                            <input type="number" id="min_bid: $" name="min_bid" value="<%= data[0].min_bid %>" min="" required>

                            <label for="description">Add a Description (optional)</label>
                            <input type="text" id="description" name="description" value="<%= data[0].description %>" placeholder="Add an optional description for this lowly soul...">

                            <!-- HIDDEN DATA -->
                            <input type="hidden" name="soul_id" value="<%= data[0].soul_id %> ">
                            <input type="hidden" name="owner_id" value="<%= data[0].seller_id %> ">

                            <div id="formButtons">
                                   <button name="submit" class="btn btn-large btn-danger">Submit</button>
                                   <a href="/manage" class="btn btn-large btn-primary" >Cancel</a>
                            </div>
                            
                            
                     </form>
                     
                     
              </div>
       </div>
</div>

